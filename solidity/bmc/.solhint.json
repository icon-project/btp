{
    "extends": ["solhint:recommended"],
    "rules": {
      "compiler-version": ["error", ">=0.5.0 <0.8.0"],
      "prettier/prettier": "error",
      "avoid-throw": "off",
      "avoid-suicide": "error",
      "avoid-sha3": "warn",
      "no-inline-assembly": "off",
      "func-visibility": ["warn", {"ignoreConstructors": true}],
      "no-empty-blocks": "off",
      "reason-string": "off"
    },
    "plugins": ["prettier"]
  }
  